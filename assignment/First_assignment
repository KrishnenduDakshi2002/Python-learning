


def computepay(hours,rate):
    if hours<=40:
        pay = hours*rate
        return pay
    elif hours>40:
        pay= (40*rate)+((hours-40)*rate*1.5)
        return pay


hrs = input("enter hours")
hrs = float(hrs)
rate = input("enter rate")
rate = float(rate)

print('pay',computepay(hrs,rate))
print("pay","rate",)
